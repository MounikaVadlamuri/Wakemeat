<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backgroundcolor">


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/AddAlarmButton"
        android:text="+ Alarm"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/material_dynamic_neutral30"
        app:cornerRadius ="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DisplayAlarms"
        android:text=" "
        android:textSize="15sp"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/IdToDelete"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_alarm_off_24"
        android:drawablePadding="8dp"
        android:hint="Inform the Alarm ID to delete"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="40dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/DeleteAlarmButton"
        android:text="- Alarm"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/material_dynamic_neutral30"
        app:cornerRadius ="20dp"/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:onClick="OnToggleClicked"
        android:backgroundTint="@color/material_dynamic_neutral30"
        app:cornerRadius ="20dp"/>

</LinearLayout>
